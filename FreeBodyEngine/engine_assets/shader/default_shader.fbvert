#version 330 core

uniform mat4 view;
uniform mat4 proj;
uniform mat4 model;

layout(location = 0) in vec3 vertex;
layout(location = 1) in vec2 uvs;
layout(location = 2) in vec3 normal;

out vec2 uv;
out vec3 normals;


void main() {
    uv = uvs;
    normals = normal;
    
    gl_Position = proj * view * model * vec4(vertex.xy, 0.0, 1.0);
}
